<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de formulario de survey.survey -->
    <record id="view_survey_form_inherit_aulametrics" model="ir.ui.view">
        <field name="name">survey.survey.form.inherit.aulametrics</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <!-- Añadir campos de AulaMetrics en el formulario de survey -->
            <xpath expr="//field[@name='title']" position="after">
                <field name="is_aulametrics" invisible="1"/>
                <field name="thematic_area" invisible="not is_aulametrics"/>
            </xpath>
            
            <!-- Añadir smart button para ver evaluaciones que usan este cuestionario -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_evaluations" class="oe_stat_button" icon="fa-calendar-check-o"
                        invisible="not is_aulametrics">
                    <field name="evaluation_count" widget="statinfo" string="Evaluaciones"/>
                </button>
            </xpath>
            
            <!-- Ocultar chatter para cuestionarios de AulaMetrics -->
            <xpath expr="//div[hasclass('oe_chatter')]" position="attributes">
                <attribute name="invisible">is_aulametrics</attribute>
            </xpath>
        </field>
    </record>

    <!-- Filtro adicional en vista de búsqueda de surveys -->
    <record id="view_survey_search_inherit_aulametrics" model="ir.ui.view">
        <field name="name">survey.survey.search.inherit.aulametrics</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="AulaMetrics" name="aulametrics" domain="[('is_aulametrics', '=', True)]"/>
                <separator/>
                <filter string="Bienestar Emocional" name="wellbeing" domain="[('thematic_area', '=', 'wellbeing')]"/>
                <filter string="Clima Escolar / Bullying" name="bullying" domain="[('thematic_area', '=', 'bullying')]"/>
            </xpath>
        </field>
    </record>
</odoo>