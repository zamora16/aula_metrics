<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Lista de Alertas -->
    <record id="view_alert_tree" model="ir.ui.view">
        <field name="name">aulametrics.alert.tree</field>
        <field name="model">aulametrics.alert</field>
        <field name="arch" type="xml">
            <tree string="Alertas">
                <field name="name"/>
                <field name="alert_date"/>
                <field name="status"/>
                <field name="alert_level"/>
                <field name="threshold_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario de Alertas -->
    <record id="view_alert_form" model="ir.ui.view">
        <field name="name">aulametrics.alert.form</field>
        <field name="model">aulametrics.alert</field>
        <field name="arch" type="xml">
            <form string="Alerta">
                <header>
                    <button string="Marcar como Resuelta" type="object" name="action_resolve" 
                            invisible="status != 'active'" class="btn-success"/>
                    <button string="Descartar Alerta" type="object" name="action_dismiss" 
                            invisible="status != 'active'" class="btn-warning" 
                            confirm="¿Está seguro de que quiere descartar esta alerta?"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="alert_date" readonly="1"/>
                        <field name="status"/>
                        <field name="alert_level" readonly="1"/>
                        <field name="threshold_id" readonly="1"/>
                        <field name="severity"/>
                    </group>
                    <group>
                        <field name="message" readonly="1"/>
                        <field name="score_value" readonly="1"/>
                    </group>
                    <group string="Detalles">
                        <field name="participation_id" readonly="1"/>
                        <field name="student_id" readonly="1"/>
                        <field name="academic_group_id" readonly="1"/>
                    </group>
                    <group string="Resolución" invisible="status != 'resolved'">
                        <field name="resolution_date" readonly="1"/>
                        <field name="resolution_action" readonly="1" widget="text" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana para Alertas -->
    <record id="action_alert" model="ir.actions.act_window">
        <field name="name">Alertas</field>
        <field name="res_model">aulametrics.alert</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay alertas generadas
            </p>
            <p>
                Las alertas se generan automáticamente según los umbrales configurados.
            </p>
        </field>
    </record>
</odoo>