<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Los tutores solo ven sus grupos asignados -->
        <record id="academic_group_tutor_rule" model="ir.rule">
            <field name="name">Tutores: solo sus grupos</field>
            <field name="model_id" ref="model_aulametrics_academic_group"/>
            <field name="domain_force">[('tutor_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_tutor'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Los orientadores y administradores ven todos los grupos -->
        <record id="academic_group_counselor_admin_rule" model="ir.rule">
            <field name="name">Orientadores/Admins: todos los grupos</field>
            <field name="model_id" ref="model_aulametrics_academic_group"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin'))]"/>
        </record>

        <!-- Umbrales: todos los grupos pueden ver todos los umbrales -->
        <record id="threshold_all_rule" model="ir.rule">
            <field name="name">Umbrales: acceso global</field>
            <field name="model_id" ref="model_aulametrics_threshold"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_admin')), (4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_tutor')), (4, ref('group_aulametrics_management'))]"/>
        </record>

        <!-- Alertas: Tutores solo ven alertas de sus grupos -->
        <record id="alert_tutor_rule" model="ir.rule">
            <field name="name">Alertas: Tutores solo sus grupos</field>
            <field name="model_id" ref="model_aulametrics_alert"/>
            <field name="domain_force">[('academic_group_id.tutor_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_tutor'))]"/>
        </record>

        <!-- Alertas: Management solo ve alertas grupales -->
        <record id="alert_management_rule" model="ir.rule">
            <field name="name">Alertas: Management solo grupales</field>
            <field name="model_id" ref="model_aulametrics_alert"/>
            <field name="domain_force">[('alert_level', '=', 'group')]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_management'))]"/>
        </record>

        <!-- Alertas: Orientadores y Admins ven todas -->
        <record id="alert_counselor_admin_rule" model="ir.rule">
            <field name="name">Alertas: Orientadores/Admins todas</field>
            <field name="model_id" ref="model_aulametrics_alert"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin'))]"/>
        </record>

        <!-- Dashboard de Alertas: acceso global para todos los grupos -->
        <record id="alerts_dashboard_all_rule" model="ir.rule">
            <field name="name">Dashboard Alertas: acceso global</field>
            <field name="model_id" ref="model_alerts_dashboard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_admin')), (4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_tutor')), (4, ref('group_aulametrics_management'))]"/>
        </record>

        <!-- Reportes: Tutores solo ven reportes de evaluaciones con sus grupos -->
        <record id="report_tutor_rule" model="ir.rule">
            <field name="name">Reportes: Tutores solo sus grupos</field>
            <field name="model_id" ref="model_aulametrics_report"/>
            <field name="domain_force">[('evaluation_id.academic_group_ids.tutor_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_tutor'))]"/>
        </record>

        <!-- Reportes: Orientadores, Admins y Management ven todos -->
        <record id="report_counselor_admin_rule" model="ir.rule">
            <field name="name">Reportes: Orientadores/Admins/Management todos</field>
            <field name="model_id" ref="model_aulametrics_report"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin')), (4, ref('group_aulametrics_management'))]"/>
        </record>

        <!-- Encuestas: Orientadores y Admins tienen acceso completo -->
        <record id="survey_counselor_admin_rule" model="ir.rule">
            <field name="name">Encuestas: Orientadores/Admins acceso completo</field>
            <field name="model_id" ref="survey.model_survey_survey"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Preguntas de encuestas: Orientadores y Admins tienen acceso completo -->
        <record id="survey_question_counselor_admin_rule" model="ir.rule">
            <field name="name">Preguntas: Orientadores/Admins acceso completo</field>
            <field name="model_id" ref="survey.model_survey_question"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Respuestas de preguntas: Orientadores y Admins tienen acceso completo -->
        <record id="survey_question_answer_counselor_admin_rule" model="ir.rule">
            <field name="name">Opciones de respuesta: Orientadores/Admins acceso completo</field>
            <field name="model_id" ref="survey.model_survey_question_answer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_aulametrics_counselor')), (4, ref('group_aulametrics_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>