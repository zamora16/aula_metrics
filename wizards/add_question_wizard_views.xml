<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del wizard para añadir preguntas -->
    <record id="view_add_question_wizard_form" model="ir.ui.view">
        <field name="name">add.question.wizard.form</field>
        <field name="model">aula_metrics.add_question_wizard</field>
        <field name="arch" type="xml">
            <form string="Añadir Pregunta">
                <sheet>
                    <group>
                        <field name="survey_id" invisible="1"/>
                        <field name="title" placeholder="Escribe aquí la pregunta..."/>
                        <field name="question_type"/>
                        <field name="sequence"/>
                    </group>
                    
                    <notebook>
                        <page string="Opciones de Respuesta" invisible="question_type in ['char_box', 'text_box']">
                            <field name="answer_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="value" string="Texto de la Opción"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Añadir Pregunta" type="object" name="action_add_question" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
