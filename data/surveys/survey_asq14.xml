<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- CUESTIONARIO 3: Estrés para Adolescentes (ASQ-14) -->
    <!-- ========================================== -->
    <record id="survey_asq14" model="survey.survey">
        <field name="title">Cuestionario de Estrés para Adolescentes (ASQ-14)</field>
        <field name="is_aulametrics" eval="True"/>
        <field name="survey_code">ASQ14</field>
        <field name="scoring_config" eval="{'max_sequence': 4, 'subscales': {'stress_score': {'questions': 'all_matrix', 'items': 14}}}"/>
        <field name="description">A continuación, encontrarás algunas situaciones que te pueden suceder en tu vida. Por favor, rodea con un círculo en qué medida o grado estas situaciones te provocan preocupación, inquietud o estrés durante el último año.

Por favor, responde a todos los enunciados del cuestionario. Si alguno de ellos no te ha ocurrido debes marca 0 = nada estresante (o no es importante para mí).</field>
        <field name="scoring_type">no_scoring</field>
        <field name="questions_layout">one_page</field>
        <field name="users_can_go_back" eval="True"/>
        <field name="is_attempts_limited" eval="False"/>
        <field name="is_time_limited" eval="False"/>
        <field name="access_mode">token</field>
        <field name="users_login_required" eval="False"/>
    </record>

    <!-- Pregunta matriz ASQ-14 -->
    <record id="survey_asq14_question" model="survey.question">
        <field name="survey_id" ref="survey_asq14"/>
        <field name="title">Durante el último año...</field>
        <field name="question_type">matrix</field>
        <field name="matrix_subtype">simple</field>
        <field name="sequence">1</field>
        <field name="constr_mandatory" eval="True"/>
    </record>

    <!-- Opciones de respuesta ASQ-14 (columnas) -->
    <record id="asq14_answer_0" model="survey.question.answer">
        <field name="question_id" ref="survey_asq14_question"/>
        <field name="value">0 = Nada estresante (o no es importante para mí)</field>
        <field name="sequence">0</field>
    </record>
    <record id="asq14_answer_1" model="survey.question.answer">
        <field name="question_id" ref="survey_asq14_question"/>
        <field name="value">1 = Un poco estresante</field>
        <field name="sequence">1</field>
    </record>
    <record id="asq14_answer_2" model="survey.question.answer">
