<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron job para actualizar automáticamente estados de evaluaciones -->
    <record id="ir_cron_auto_update_evaluation_states" model="ir.cron">
        <field name="name">Actualizar Estados de Evaluaciones</field>
        <field name="model_id" ref="model_aulametrics_evaluation"/>
        <field name="state">code</field>
        <field name="code">model.auto_update_evaluation_states()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall">0</field>
        <field name="active">1</field>
    </record>

    <!-- Job para generar alertas automáticamente -->
    <record id="cron_generate_alerts" model="ir.cron">
        <field name="name">Generar Alertas de AulaMetrics</field>
        <field name="model_id" ref="model_aulametrics_alert"/>
        <field name="state">code</field>
        <field name="code">model.generate_alerts()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall">0</field>
        <field name="active">1</field>
    </record>
</odoo>
