<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Palabras Clave de Alerta por Defecto (Sistema) -->
        <!-- Las variantes ortográficas y gramaticales se generan automáticamente -->
        
        <!-- Críticas: Suicidio y autolesión -->
        <record id="alert_keyword_suicidio" model="aulametrics.alert_keyword">
            <field name="keyword">suicidio</field>
            <field name="description">Mención de ideación o planes suicidas (auto-genera: suicida, suicidar, etc.)</field>
            <field name="severity">critical</field>
            <field name="is_system_default" eval="True"/>
            <field name="sequence">1</field>
        </record>
        
